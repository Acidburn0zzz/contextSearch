{

  "manifest_version": 2,
  "name": "Context Search",
  "description": "Searches the selected text using a search engine from a pre-specified list",
  "version": "3.15",
  "author": "Olivier de Broqueville",
  "applications": {
    "gecko": {
        "id": "olivier.debroqueville@gmail.com"
    }
  },

  "background": {
      "scripts": [
        "background.js",
        "sort.js"
      ]
  },

  "permissions": [
      "contextMenus",
      "storage"
  ],

  "icons": {
    "48": "icons/icon_48.png",
    "96": "icons/icon_96.png"
  },

  "options_ui": {
  "page": "options.html",
  "browser_style": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["selection.js"]
    }
  ]

}